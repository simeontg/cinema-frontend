{
    "semi": true,
    "tabWidth": 4,
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "none",
    "plugins": ["@trivago/prettier-plugin-sort-imports"],
    "importOrder": [
        "^react$",
        "<THIRD_PARTY_MODULES>",
        "^(app|api|features|interfaces|pages|shared|widgets)/(.*)$", 
        "^[./]", 
        "^.+\\.?(css)$"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
}